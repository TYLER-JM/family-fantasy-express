extends layout.pug 
block content 
  h2.is-center 
  table.striped 
    caption Prediction History
    thead 
      tr
        th Date 
        th Prediction 
        th Final Score 
        th Result
    tbody#predictionList 
      each prediction in predictions
        include partials/prediction.pug
  button#showMore.pull-right(data-page=1) Show more
  script(src="../assets/loadMorePredictions.js") 